mixin-grid(columns, spacing= spacing-grap)
  display: grid
  grid-template-columns: columns
  grid-gap: spacing
  align-items: center

mixin-paragraph(color=blue_medium, size = font_size)
  font-family: font
  font-weight: weight_bold
  color: color
  font-size: size

mixin-followers(color=blue_medium)
  font-family: font
  margin: 0
  font-weight: weight_regular
  color: color
  text-transform: uppercase
  letter-spacing: letter-spacing
  font-size: font_size

mixin-header()
  font-family: font
  font-weight: weight_bold
  color: blue_medium

mixin-flex(position= center)
  display: flex
  align-items: position

mixin-border(background-color = facebook)
  border-top: 4px solid transparent
  background: background-color
  border-radius: border-radius

mixin_cardOverview()
  mixin-grid(repeat(2,1fr), 0)
  grid-template-rows: 1fr 1fr
  border: 1px solid transparent
  border-radius: border-radius
  box-sizing: border-box
  padding: 10px 30px
  min-width: 240px;
  min-height: 100px

mixin_card-procentage(color= green)
  text-align: end
  position: relative
  top: 7px
  font-size: font-size-small
  color: color
